<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:foreground="@drawable/foreground"
        android:id="@+id/Relative" android:background="#BFB3B3">
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="96dp"
            app:srcCompat="@drawable/without"
            android:id="@+id/ButtonWithOutLogin"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:onClick="OnClick"/>
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="96dp"
            app:srcCompat="@drawable/register"
            android:id="@+id/imageButton2"
            android:layout_above="@+id/ButtonWithOutLogin" tools:srcCompat="@drawable/register"
            android:scaleType="centerInside"/>
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="96dp"
            app:srcCompat="@drawable/voyti"
            android:id="@+id/imageButton3"
            android:layout_above="@+id/imageButton2"
            android:scaleType="centerInside"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword4"
            android:layout_above="@+id/imageButton3"
            android:layout_marginBottom="40dp"
            android:textAlignment="center" android:textSize="24sp"
            android:selectAllOnFocus="true"
            android:foreground="@drawable/password1" android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            android:layout_above="@+id/editTextTextPassword4"
            android:layout_marginBottom="40dp"
            android:textAlignment="center" android:textColor="#000000"
            android:textSize="24sp" android:textStyle="bold"
            android:foreground="@drawable/login" android:selectAllOnFocus="true" android:text="логин"/>
</RelativeLayout>