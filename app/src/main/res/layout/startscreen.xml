<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartScreenActivity"
        android:foreground="@drawable/android10">
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="96dp"
            app:srcCompat="@drawable/settings"
            android:id="@+id/imageButton"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:layout_marginBottom="41dp"/>
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="96dp"
            app:srcCompat="@drawable/open_tournament"
            android:id="@+id/imageButton4"
            android:layout_above="@+id/imageButton"
            android:scaleType="centerInside"
            android:layout_marginBottom="41dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            app:srcCompat="@drawable/create_tournament"
            android:id="@+id/imageButton5"
            android:scaleType="centerInside" android:layout_above="@+id/imageButton4"
            android:layout_marginBottom="41dp"/>
</RelativeLayout>